<script>
  function pjax_lazyload() {
    var pjax_images = Array.prototype.slice.call(document.querySelectorAll('img[data-original]'));

    function elementInViewport(el) {
      var rect = el.getBoundingClientRect();
      return (
        rect.bottom >= 0
        && rect.left >= 0
        && rect.top <= (window.innerHeight || document.documentElement.clientHeight)
      );
    }

    function loadImage(el, fn) {
      var img = new Image()
        , src = el.getAttribute('data-original');
      img.onload = function () {
        el.src = src;
        fn ? fn() : null;
      };
      img.src = src;
    }

    function throttle(method, context) {
      clearTimeout(method.tId);
      method.tId = setTimeout(function () {
        method.call(context);
      }, 500);
    }

    function processImages() {
      for (var i = 0; i < pjax_images.length; i++) {
        if (elementInViewport(pjax_images[i])) {
          (function (index) {
            var loadingImage = pjax_images[index];
            loadImage(loadingImage, function () {
              pjax_images = pjax_images.filter(function (t) {
                return loadingImage !== t;
              });
            });
          })(i);
        }
      }
    }

    processImages();

    window.addEventListener('scroll', function () {
      throttle(processImages, window);
    });
  }
</script>