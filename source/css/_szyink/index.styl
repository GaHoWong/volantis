$zoom-out = url("https://img.inkss.cn/web/cursor/zoom-out.png")
$zoom-in = url("https://img.inkss.cn/web/cursor/zoom-in.png")
$grab = url("https://img.inkss.cn/web/cursor/openhand.png")

html
  cursor $default,default

p,
input,
textarea,
pre > span
  cursor $text,text

//index.styl
a
  cursor $pointer,pointer
  p
    cursor $pointer,pointer
  &:not([href]) 
    cursor $default,default
    p
      cursor $default,default
button,
html input[type="button"],
input[type="reset"],
input[type="submit"]
  cursor: $pointer,pointer
button[disabled],html input[disabled]
  cursor: $default,default

